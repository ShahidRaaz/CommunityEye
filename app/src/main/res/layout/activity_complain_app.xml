<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplainApp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/applogo"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/dyc"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/received_img"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="60dp"
            >
            <EditText
                android:id="@id/received_value_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:hint="Type Here"
                android:background="@android:color/transparent"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/text_field"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:lineHeight="20sp"
            android:text="Full Name"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal|top" />

        <androidx.cardview.widget.CardView
            android:id="@+id/rectangle_2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="20dp">

            <EditText
                android:id="@+id/enter_your_"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:hint="Uday Bhaskar Singh"
                />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/text_field2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/full_l"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:lineHeight="20sp"
            android:text="Location"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal|top" />

        <androidx.cardview.widget.CardView
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/received_value_id"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:hint="Location??????????"
                />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="620dp"
        app:cardBackgroundColor="#FFAB0D">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/submitbtn"
            android:layout_gravity="center"
            android:text="Submit"
            android:textSize="24dp"
            android:background="@android:color/transparent"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>